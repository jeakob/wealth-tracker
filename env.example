# Wealth Tracker - Production Environment Variables
# Copy this file to .env and customize for your deployment

# API URL - Where the frontend connects to the backend
# Local: http://localhost:4000
# Production: https://api.yourdomain.com or https://yourdomain.com/api
API_URL=http://localhost:4000

# Database Configuration
POSTGRES_DB=wealth_db
POSTGRES_USER=wealth_user
POSTGRES_PASSWORD=securepassword  # CHANGE THIS IN PRODUCTION!

# Backend Security
JWT_SECRET=your_jwt_secret_change_in_production  # CHANGE THIS IN PRODUCTION! Use a strong random string
JWT_EXPIRES_IN=24h  # JWT token expiration time (24 hours)

# SSL Configuration (if using custom certificates)
# SSL_KEY_PATH=/etc/ssl/private/server.key
# SSL_CERT_PATH=/etc/ssl/certs/server.crt

# Default Admin Credentials (created on first migration)
# Username: admin
# Password: Admin123!
# IMPORTANT: Change the admin password immediately after first login!
